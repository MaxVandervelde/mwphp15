<!DOCTYPE html>
<html>
    <head>
        <title>
            {% if page.title == 'Home' %}
            {{ site.title }} {% if site.description %}| {{ site.description }}{% endif %}
            {% else %}
            {% block title %}{{ page.title }}{% endblock %} | {{ site.title }} &mdash; {{ site.subtitle }}
            {% endif %}
        </title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/{{ theme_path('assets/css/style.css') }}" rel="stylesheet" type="text/css" />
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <link rel="alternate" type="application/atom+xml" href="{{ site.url }}/atom.xml" title="{{ site.title }} activity feed" />
        <style>
            /** quick fix because bootstrap <pre> has a background-color. */
            pre code { background-color: inherit; }
        </style>
    </head>

    <body class="no-js">
        <div class="wrapper">
            <main class="main-content inner-wrapper">
                <article class="page-content">
                    {% block content_wrapper %}
                        {% block content %}
                        {% endblock %}
                    {% endblock %}
                </article>
            </main>

            {% include 'footer' %}

        </div><!-- .wrapper -->
        <div class="mobile-nav-menu"></div><!-- placeholder for mobile nav -->

{#      Commented to speed up on train development
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ site.url }}/components/jquery/jquery.min.js"><\/script>')</script>
#}
        <script src="/{{ theme_path('assets/js/main.js') }}"></script>

        {% block scripts %}
        {% endblock %}

        {% if site.google_analytics_tracking_id %}
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '{{ site.google_analytics_tracking_id }}', 'auto');
            ga('send', 'pageview');

        </script>
        {% endif %}
    </body>
</html>
