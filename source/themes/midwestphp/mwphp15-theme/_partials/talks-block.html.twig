{% if page.layout == 'speaker' %}
    <ul class="talks-list">
        {% for talk in data.talks if talk.speakerlastname | lower == page.lastname | lower %}
            <li><a href="{{ talk.url }}" title="{{ talk.title }}">{{ talk.title }}</a></li>
        {% endfor %}
    </ul>
{% else %}
    <ul class="talks-list">
        {% for talk in data.talks %}
            <li><a href="{{ talk.url }}" title="{{ talk.title }}">{{ talk.title }}</a>
                <ul class="talk-sub-information">
                    <li>Level: {{ talk.level }}</li>
                    <li>Tags: Some, Random, Tags</li>
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endif %}
